<Window x:Class="CurrencyConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyConverter"
        mc:Ignorable="d"
        Title="Currency Converter" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="23" Margin="10,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="141"/>
        <Label x:Name="lblInput" Content="Input currency:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblResult" Content="result will be shown here...." Margin="10,74,10,0" VerticalAlignment="Top" Height="29" RenderTransformOrigin="0.042,1.688"/>
        <Button x:Name="btnConvert" Content="Convert" HorizontalAlignment="Left" Margin="165,36,0,0" VerticalAlignment="Top" Width="75" Click="btnConvert_Click"/>
    </Grid>
</Window>
